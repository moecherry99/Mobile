<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Game2Rules">
    <ContentPage.Resources>
        <!-- CSS for page -->
        <StyleSheet>

            ^contentpage {  
       background-color: white;  
     }  
   
     #lblTitle {
            font-family: Consolas;
            font-style: bold;
            font-size: medium;
     }
        </StyleSheet>
    </ContentPage.Resources>

    <StackLayout>

        <Label x:Name="lblTitle" Text="Game 2 Rules" 
               HorizontalOptions="Center" />

        <Editor Text="This game is a typing accuracy test. 
You have to click the Start Game 2 button and then quickly type
the string that appears into the text box. After you have typed
the correct string, click the Confirm Text button to accept it!"
                    BackgroundColor="#84d3b3" HeightRequest="400"
                    Margin="250, 100, 250, 100"/>
    </StackLayout>

</ContentPage>
