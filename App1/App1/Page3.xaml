<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page3">
    <ContentPage.Resources>
        <StyleSheet>

        ^contentpage 
        {  
            background-color: white;  
        }
        #lblTitle
        {
            font-family: Consolas;
            font-style: bold;
            font-size: medium;
        }
            
        </StyleSheet>
    </ContentPage.Resources>
    <Grid>
        <StackLayout x:Name="layout" Grid.Row="1" Grid.Column="1"        
                         HorizontalOptions="Center">
            
            <Label x:Name="lblTitle" Text="Reflex Game!" 
               HorizontalOptions="Center"/>
            
            <Button x:Name="startButton" Text="Ready Up!"
               Margin="3, 2"
               Clicked="startButton_Clicked" IsEnabled="True"/>
            <Button x:Name="stopButton" Text="Click Now!"
               Margin="3, 2"
               Clicked="stopButton_Clicked" IsEnabled="True"/>

            <Label x:Name="statusText" Text="" 
               HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>
</ContentPage>
